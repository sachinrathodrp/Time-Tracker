{
  "name": "time-tracking-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --config.mac.identity=null",
    "build:linux": "electron-builder --linux",
    "verify-uninstall": "node verify-uninstall.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Comput Labs",
  "license": "ISC",
  "type": "commonjs",
  "description": "Comp√ºt Labs Time Tracking Application",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "child_process": "^1.0.2",
    "electron-auto-launch": "^5.0.7"
  },
  "build": {
    "appId": "com.computlabs.timetrackingapp",
    "productName": "Comput Labs Time Tracking",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "assets/icons/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon128.png",
      "publisherName": "Comput Labs",
      "executableName": "ComputLabsTimeTracking"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": "always",
      "shortcutName": "Comput Labs Time Tracking",
      "installerHeader": "assets/icons/icon512.bmp",
      "installerIcon": "assets/icons/icon512.ico",
      "deleteAppDataOnUninstall": true,
      "include": "installer.nsh"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon512.png",
      "category": "Utility"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icons/icon128"
      }
    }
  }
}